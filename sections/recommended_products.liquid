            "label": "Background Image 1"
        },
        {
            "id": "image_background_image_2",
            "type": "image_picker",
            "label": "Background Image 2"
        },
        {
            "id": "image_background_image_3",
            "type": "image_picker",
            "label": "Background Image 3"
        },
        {
            "id": "text_heading",
            "type": "text",
            "label": "Heading",
            "default": "YOU MIGHT LIKE THESE"
        }
    ],
    "presets": [
        {
            "name": "Recommended Products",
            "category": "Liquify",
            "blocks": []
        }
    ],
    "enabled_on": {
        "templates": [
            "product"
        ]
    }
} {% endschema %}
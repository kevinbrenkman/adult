<div class="header_background-image-wrapper wh-padding-{{ section.settings.padding }}" style="background-color: {{ section.settings.background }}">{% if section.settings.image_image %}
{{ section.settings.image_image | image_url: width: 2000 | image_tag: loading: 'eager', class: 'header_background-image' }}
{% else %}
<img loading="eager" alt="" src="{{ 'placholder-8.svg' | asset_url }}" class="header_background-image">
{% endif %}</div> {% schema %} {
    "tag": "div",
    "name": "Full Image",
    "class": "section_header-home",
    "settings": [
        {
            "id": "image_image",
            "type": "image_picker",
            "label": "Image"
        },
        {
            "type": "header",
            "content": "Color"
        },
        {
            "type": "color",
            "id": "background",
            "label": "Background Color",
            "default": "#ffffff"
        },
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "select",
            "id": "padding",
            "label": "Image padding",
            "options": [
                {
                    "value": "on",
                    "label": "On"
                },
                {
                    "value": "off",
                    "label": "Off"
                }
            ],
            "default": "on"
        }
    ],
    "presets": [
        {
            "name": "Full Image",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}